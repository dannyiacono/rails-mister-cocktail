<div class="container show">
  <h1 style="font-family: Dancing Script;"><%= @cocktail.name %></h1>
  <div class="cocktail-info">
    <%= link_to "Add dose to this cocktail", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  </div>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <div class="dose_info">
    <% @cocktail.doses.each do |dose| %>
      <p>Description: <%= dose.description %></p>
      <p>Ingredients: <%= dose.ingredient.name %></p>
      <%= link_to "Delete this dose", dose_path(dose), method: :delete %>
    <% end %>
  </div>
  <hr>
  <%= link_to "Back to cocktails list", cocktails_path %>
</div>
