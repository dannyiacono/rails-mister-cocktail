<div class="container show">
  <h1 style="font-family: Dancing Script;"><%= @cocktail.name %></h1>
  <div class="cocktail-info">
    <%= link_to "Add dose to this cocktail", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  </div>
  <%= cl_image_tag @cocktail.photo.key, class: "cocktail-img", height: 300, width: 400, crop: :fill %>
  <% if @cocktail.doses == [] %>
    <p><%= "Add a dose to see ingredients" %></p>
    <% else %>
    <p><%= "Ingredients:" %></p>
    <% end %>
  <% @cocktail.doses.each do |dose| %>
    <div class="dose_info">
      <ul>
        <li class="ingredients"><%= dose.ingredient.name %> - <%= dose.description %> <%= link_to "x", dose_path(dose), method: :delete %></li>
      </ul>
    <% end %>
    </div>
  <hr>
  <p><%= link_to "Back to cocktails list", cocktails_path %></p>
</div>
