<%= simple_form_for [@cocktail] do |f| %>
  <%= f.input :name %>
  <%= f.input :photo, required: true, as: :file, hint: 'Photo is required' %>
  <%= f.submit "Add cocktail", class: "btn btn-primary" %>
  <%= f.error_notification %>
<% end %>

<hr>
<%= link_to "Back to cocktail list", cocktails_path %>
